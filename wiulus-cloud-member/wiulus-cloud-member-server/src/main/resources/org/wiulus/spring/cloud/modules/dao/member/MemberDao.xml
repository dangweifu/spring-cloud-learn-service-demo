    <!--查询用户详情-->
    <select id="selectMemberById" resultMap="memberVoMap">
        select
        <include refid="Base_Column_List"/>
        from wls_shop_member m,wls_shop_member_info mi
        where m.id = mi.member_id and m.del_flag = 0 and mi.del_flag = 0 AND m.id = #{id}
    </select>

    <!--用户名称返回用户信息和userid-->
    <select id="selectMemberByUserName" resultType="org.wiulus.spring.cloud.modules.entity.member.MemberEntity">
        select
        <include refid="Base_Column_List1"/>
        FROM wls_shop_member lm WHERE lm.`member_name`=#{username} AND lm.`del_flag`=0
    </select>


    <!--查询security认证信息-->
    <select id="selectSecurityUserInfo" resultType="org.wiulus.spring.cloud.modules.dto.member.SecurityDTO">
       SELECT
        le.`id` AS id,le.`member_name` AS username ,le.`member_passwd` AS PASSWORD ,le.`member_state` AS memberState
        FROM  wls_shop_member le
      WHERE le.`member_name`=#{userName} AND le.`del_flag`=0
    </select>


    <!--查询手机号是否被注册过-->
    <select id="selectMemberByUsermaneOrMobile" resultType="java.lang.Boolean">
         <![CDATA[


                 select count(id) from wls_shop_member m where member_name = #{memberMobile} or member_mobile = #{memberMobile} and del_flag = 0


        ]]>
    </select>

    <!--查询邮箱是否被注册过-->
    <select id="selectMemberByMemberEmail" resultType="java.lang.Boolean">
        <![CDATA[


                 select count(id) from wls_shop_member m where member_email = #{memberEmail} and del_flag = 0


        ]]>
    </select>

    <!--根据用户名密码查询-->
    <select id="findByName" resultType="org.wiulus.spring.cloud.modules.entity.member.MemberEntity">
        select
        <include refid="Base_Column_List1"/>
        from wls_shop_member m where member_name = #{memberName} and del_flag = 0
    </select>
    <!--根据unionid查询-->
    <select id="selectByUnionid" resultType="org.wiulus.spring.cloud.modules.entity.member.MemberEntity">
        select
        <include refid="Base_Column_List1"/>
        from wls_shop_member m where wechat_unionid = #{unionid} and del_flag = 0
    </select>

    <!--根据id查询(编辑页面)-->
    <select id="selectMemberUpdateDTO" resultMap="memberUpdateMap">
        select
        <include refid="member_update"/>
        FROM
        wls_shop_member m
        LEFT JOIN wls_shop_member_info mi ON m.id = mi.member_id
        WHERE
        m.id = #{id}
    </select>
    <!--根据手机号修改密码-->
    <update id="updatePasswordByMobile" parameterType="java.lang.String">
        update wls_shop_member set member_passwd=#{passwd} where member_mobile=#{mobile} and del_flag = 0
    </update>

    <!--根据手机号查询用户信息-->
    <select id="selectByMobile" parameterType="java.lang.String" resultType="org.wiulus.spring.cloud.modules.dto.member.MemberPhoneDTO">
        select nick_name,member_avatar
        from wls_shop_member where member_mobile =#{mobile} and del_flag =0
    </select>
    <select id="selectPhoneListById" resultType="org.wiulus.spring.cloud.modules.dto.member.MemberDTO">
        select id,nick_name,member_mobile
        from wls_shop_member
        where del_flag=0 and id in
        <foreach collection="list" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>

    </select>
    <select id="selectIndexMemberData" resultType="org.wiulus.spring.cloud.modules.dto.member.IndexMemberDataDTO">
        SELECT count( id ) AS newMemberCount,( SELECT count( id ) FROM wls_shop_member WHERE del_flag = 0 ) AS memberCount
        FROM
        wls_shop_member
        WHERE
        del_flag = 0
        AND create_date &gt;= '2020-01-01'
        AND create_date &lt;= '2020-03-03'

    </select>
</mapper>
